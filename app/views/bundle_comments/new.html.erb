<h1>Add your comment please:</h1>

<% form_for( :bundle_comment, :url => bundle_bundle_comments_path(@bundle) ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', bundle_path(@bundle) %>
