<h1>Editing bundle</h1>

<% form_for(@bundle) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :currency_code %><br />
    <%= f.select( :currency_code, [['Euro', 'EUR'], ['US-Dollar','USD']]  ) %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @bundle %> |
<%= link_to 'Back', bundles_path %>
