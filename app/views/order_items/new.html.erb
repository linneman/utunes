<h1>New order_item</h1>

<% form_for(@order_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :bundle_id %><br />
    <%= f.text_field :bundle_id %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', order_items_path %>
